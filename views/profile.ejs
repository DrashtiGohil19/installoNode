<body>
    <div id="profile-modal" uk-dropdown="mode:click ; animation: uk-animation-slide-bottom-small"
        class="header_dropdown">
        <div class="px-4 py-3 -mx-5 -mt-4 mb-5 border-b">
            <h4>Upload Photo</h4>
        </div>
        <div class="flex justify-center flex-center text-center dark:text-gray-300">
            <form action="/profile" enctype="multipart/form-data" method="POST" class="p-5">
                <input type="file" name="myFile" class="py-5" />
                <input type="submit" value="Upload a file" class="pt-5" style="margin-top: 20px!important;" />
            </form>
        </div>
    </div>

    <div id="wrapper">
        <% include header %>
            <div class="main_content">
                <div class="container pro-container m-auto">

                    <!-- profile-cover-->
                    <div class="flex lg:flex-row flex-col items-center lg:py-8 lg:space-x-8">

                        <div>
                            <div
                                class="bg-gradient-to-tr from-yellow-600 to-pink-600 p-1 rounded-full m-0.5 mr-2  w-56 h-56 relative overflow-hidden uk-transition-toggle">
                                <img src="images/<%= data.profile_pic %>"
                                    class="bg-gray-200 border-4 border-white rounded-full w-full h-full dark:border-gray-900 object-cover">

                                <!--=============== upload ================-->

                                <div
                                    class="absolute -bottom-3 custom-overly1 flex justify-center pt-4 pb-7 space-x-3 text-2xl text-white uk-transition-slide-bottom-medium w-full">
